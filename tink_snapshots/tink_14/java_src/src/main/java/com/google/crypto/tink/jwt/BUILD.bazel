load("@build_bazel_rules_android//android:rules.bzl", "android_library")

licenses(["notice"])

package(default_visibility = ["//visibility:public"])

java_library(
    name = "jwt_mac",
    srcs = ["JwtMac.java"],
    deps = [
        ":jwt",
        ":jwt_validator",
        ":to_be_signed_jwt",
        "@maven//:com_google_errorprone_error_prone_annotations",
    ],
)

java_library(
    name = "jwt",
    srcs = ["Jwt.java"],
    deps = [
        ":jwt_expired_exception",
        ":jwt_names",
